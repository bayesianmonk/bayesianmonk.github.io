---
import TypewriterText from "./TypewriterText";
---

<div class="hero-container">
  <h1 class="hero-title">The Bayesian Monk</h1>
  <TypewriterText client:load />
</div>

<style>
  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
    text-align: center;
  }

  .hero-title {
    font-family: 'Inter', 'Space Grotesk', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
  }

  .hero-subtitle {
    font-family: 'Space Grotesk', 'Inter', ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, monospace;
    font-size: clamp(1.25rem, 3vw, 2rem);
    font-weight: 400;
    color: #a0a0a0;
    margin: 0;
    letter-spacing: 0.05em;
    min-height: 2.5rem;
  }

  .cursor {
    color: #ffffff;
    animation: blink 1s infinite;
    margin-left: 0.25rem;
  }

  @keyframes blink {
    0%, 50% {
      opacity: 1;
    }
    51%, 100% {
      opacity: 0;
    }
  }

  @media (max-width: 768px) {
    .hero-container {
      padding: 1rem;
    }
  }
</style>

