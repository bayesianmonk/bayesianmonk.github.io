---
import type { CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'portfolio'>;
}

const { entry } = Astro.props;
const { data, slug } = entry;
---

<a href={`/portfolio/${slug}`} class="portfolio-card">
  <div class="card-header">
    <h3 class="card-title">{data.title}</h3>
    <div class="complexity-badge">
      <span class="complexity-label">COMPLEXITY</span>
      <div class="complexity-score">
        <span class="score-value">{data.complexity}</span>
        <span class="score-max">/10</span>
      </div>
      <div class="complexity-bar">
        <div 
          class="complexity-fill" 
          style={`width: ${(data.complexity / 10) * 100}%`}
        ></div>
      </div>
    </div>
  </div>
  
  <p class="card-description">{data.description}</p>
  
  <div class="card-footer">
    <div class="tags">
      {data.tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
    {data.date && (
      <time class="card-date" datetime={data.date.toISOString()}>
        {data.date.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'short', 
          day: 'numeric' 
        })}
      </time>
    )}
  </div>
</a>

<style>
  .portfolio-card {
    display: block;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.75rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    color: inherit;
    position: relative;
    overflow: hidden;
  }

  .portfolio-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.5), transparent);
    opacity: 0;
    transition: opacity 0.3s;
  }

  .portfolio-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(0, 255, 255, 0.3);
    transform: translateY(-4px);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.4),
      0 0 20px rgba(0, 255, 255, 0.1);
  }

  .portfolio-card:hover::before {
    opacity: 1;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .card-title {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #ffffff;
    margin: 0;
    flex: 1;
    line-height: 1.3;
  }

  .complexity-badge {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
    min-width: 100px;
  }

  .complexity-label {
    font-family: ui-monospace, 'Cascadia Code', monospace;
    font-size: 0.625rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.5);
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .complexity-score {
    display: flex;
    align-items: baseline;
    gap: 0.125rem;
    font-family: ui-monospace, 'Cascadia Code', monospace;
  }

  .score-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #00ffff;
    text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
  }

  .score-max {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .complexity-bar {
    width: 100%;
    height: 3px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    overflow: hidden;
  }

  .complexity-fill {
    height: 100%;
    background: linear-gradient(90deg, #00ffff, #0080ff);
    border-radius: 2px;
    transition: width 0.3s ease;
    box-shadow: 0 0 8px rgba(0, 255, 255, 0.4);
  }

  .card-description {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin: 0 0 1rem 0;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-family: ui-monospace, 'Cascadia Code', monospace;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: rgba(0, 255, 255, 0.1);
    border: 1px solid rgba(0, 255, 255, 0.2);
    border-radius: 0.25rem;
    color: rgba(255, 255, 255, 0.8);
    letter-spacing: 0.05em;
  }

  .card-date {
    font-family: ui-monospace, 'Cascadia Code', monospace;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }

  @media (max-width: 640px) {
    .card-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .complexity-badge {
      align-items: flex-start;
    }
  }
</style>

